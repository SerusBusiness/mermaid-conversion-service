{
  "args": [
    "--no-sandbox", 
    "--disable-setuid-sandbox", 
    "--font-render-hinting=none", 
    "--disable-features=site-per-process",
    "--disable-web-security",
    "--allow-file-access-from-files",
    "--disable-dev-shm-usage",
    "--enable-gpu",
    "--ignore-certificate-errors"
  ],
  "defaultViewport": {
    "width": 1920, 
    "height": 1080,
    "deviceScaleFactor": 2
  },
  "timeout": 180000,
  "headless": "new",
  "ignoreHTTPSErrors": true
}